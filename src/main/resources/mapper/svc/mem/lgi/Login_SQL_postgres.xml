<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="LoginDAO">

    <select id="selectSignInYn" parameterType="brew.cmm.service.sns.service.LoginVO" resultType="int">
        select count(*)
        from (
            select *
            from brew.brewlogin
            where 1=1
                and user_id = #{userId}
             )z
    </select>

    <select id="selectUserLoginInfo" parameterType="brew.cmm.service.sns.service.LoginVO" resultType="brew.cmm.service.sns.service.LoginVO">
        select *
        from brew.brewlogin
        where 1=1
          and user_id = #{userId}
    </select>

    <insert id="insertKakaoLogin" parameterType="brew.cmm.service.sns.service.LoginVO">
        <selectKey keyProperty="userSn" resultType="string" order="BEFORE">
            SELECT
                CASE
                    WHEN MAX(user_sn) IS NULL THEN 'USER_0000000001'
                    ELSE 'USER_' || LPAD((SUBSTRING(MAX(user_sn), 6)::INTEGER + 1)::TEXT, 10, '0')
                END
            FROM brew.brewlogin
        </selectKey>
        INSERT INTO brew.brewlogin (
            user_sn
            ,user_id
            ,user_nm
            ,nick_nm
            ,profile_img_url
            ,thumbnail_img_url
            ,use_yn
            ,login_se
            ,auth_cd
            ,exit_yn
            ,rgtr_id
            ,rgtr_dt
            ,mdfr_id
            ,mdfr_dt
        )
        VALUES (
            #{userSn}
            ,#{userId}
            ,#{userNm}
            ,#{nickNm}
            ,#{profileImgUrl}
            ,#{thumbnailImgUrl}
            ,'Y'
            ,'KAKAO'
            ,'Z'
            ,'N'
            ,#{userSn}
            ,current_timestamp
            ,#{userSn}
            ,current_timestamp
        )
    </insert>

    <insert id="insertKakaoSignIn" parameterType="brew.cmm.service.sns.service.LoginVO">
        INSERT INTO brew.brewsignin (
            user_sn
            ,user_id
            ,user_nm
            ,nick_nm
            ,profile_img_url
            ,thumbnail_img_url
            ,use_yn
            ,login_se
            ,auth_cd
            ,exit_yn
            ,rgtr_id
            ,rgtr_dt
            ,mdfr_id
            ,mdfr_dt
        )
        VALUES (
            #{userSn}
            ,#{userId}
            ,#{userNm}
            ,#{nickNm}
            ,#{profileImgUrl}
            ,#{thumbnailImgUrl}
            ,'Y'
            ,'KAKAO'
            ,'F'
            ,'N'
            ,#{userSn}
            ,current_timestamp
            ,#{userSn}
            ,current_timestamp
        )
    </insert>

    <insert id="insertGoogleLogin" parameterType="brew.cmm.service.sns.service.LoginVO">
        <selectKey keyProperty="userSn" resultType="string" order="BEFORE">
            SELECT
            CASE
            WHEN MAX(user_sn) IS NULL THEN 'USER_0000000001'
            ELSE 'USER_' || LPAD((SUBSTRING(MAX(user_sn), 6)::INTEGER + 1)::TEXT, 10, '0')
            END
            FROM brew.brewlogin
        </selectKey>
        INSERT INTO brew.brewlogin (
        user_sn
        ,user_id
        ,user_nm
        ,nick_nm
        ,profile_img_url
        ,thumbnail_img_url
        ,given_nm
        ,family_nm
        ,email
        ,email_verified
        ,use_yn
        ,login_se
        ,auth_cd
        ,exit_yn
        ,rgtr_id
        ,rgtr_dt
        ,mdfr_id
        ,mdfr_dt
        )
        VALUES (
        #{userSn}
        ,#{userId}
        ,#{familyNm} || ' ' || #{givenNm}
        ,#{nickNm}
        ,#{profileImgUrl}
        ,#{thumbnailImgUrl}
        ,#{givenNm}
        ,#{familyNm}
        ,#{email}
        ,#{emailVerified}
        ,'Y'
        ,'GOOGLE'
        ,'Z'
        ,'N'
        ,#{userSn}
        ,current_timestamp
        ,#{userSn}
        ,current_timestamp
        )
    </insert>

    <insert id="insertGoogleSignIn" parameterType="brew.cmm.service.sns.service.LoginVO">
        INSERT INTO brew.brewsignin (
            user_sn
            ,user_id
            ,user_nm
            ,nick_nm
            ,email
            ,profile_img_url
            ,thumbnail_img_url
            ,use_yn
            ,login_se
            ,auth_cd
            ,exit_yn
            ,rgtr_id
            ,rgtr_dt
            ,mdfr_id
            ,mdfr_dt
        )
        VALUES (
            #{userSn}
            ,#{userId}
            ,#{familyNm} || ' ' || #{givenNm}
            ,#{nickNm}
            ,#{email}
            ,#{profileImgUrl}
            ,#{thumbnailImgUrl}
            ,'Y'
            ,'GOOGLE'
            ,'F'
            ,'N'
            ,#{userSn}
            ,current_timestamp
            ,#{userSn}
            ,current_timestamp
        )
    </insert>

</mapper>